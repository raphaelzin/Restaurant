<script>
	$("."+"products").hide();
</script>
<div id="container">
<h3>Choose your pick!</h3>
<h5><%= link_to 'Back home', table_client_path(current_table,current_client) %></h5><br>
<% @categories.each do |c| %>
	<h5 class="category" id="<%= c.name %>">- <%= c.name %> -</h5> 
	<h6>(<%= c.description %>)</h6><br>
	<div id="<%= c.name %>-products" class="products">
		<% c.dishes.each do |d| %>
			<div class="product" >
				<div class="left">
					<%= image_tag d.pic.url(:medium), :class => 'productPic', :id => 'circular-big'%>
						<%= link_to d.title, category_dish_path(c,d) %>
				</div>
				<div class="right">
					<br id="circular-big">
					$<%=d.price%> - 
						<%= link_to "Order", add_dish_table_client_path(current_table, current_client, dish_id: d.id), 
						method: :post, data: { confirm: 'Confirm your order' }
					%>
				</div>
			<br>
			</div>
		<%end%>
	</div>
<%end%>
</div>
