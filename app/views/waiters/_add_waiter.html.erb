
<%= form_for @waiter, :remote => true do |f| %>

  <%= f.label :name %>
  <br>
  <%= f.text_field :name, required: true %>
  <br>
  <%= f.label :password, 'Enter new password' %>
  <br>
  <%= f.password_field :password, required: true %>
  <br>
  <br>
  <%= f.submit 'Add Employee!', class: "button" %>
<% end %>